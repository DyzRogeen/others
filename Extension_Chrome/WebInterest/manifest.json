{
    "manifest_version": 3,
    "name": "WebInterests",
    "version": "1.0",
    "description": "A Chrome extension that aims to collect your interests through the web",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
        }
    ],
    "permissions": [
        "identity",
        "identity.email",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "default-src 'self'; connect-src 'self' https://localhost:3001;"
    }
}